<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/l_layout_tab"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/l_tabs_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBitterSweet"
        app:tabTextColor="@color/colorUnSelected"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabIndicatorColor="@color/colorBitterSweetDark"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/l_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/l_tabs_main"/>

</LinearLayout>